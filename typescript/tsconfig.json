{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@fetchApi/*": [
        "./src/fetch-api/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@i18n/*": [
        "./src/i18n/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
