<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="robots" content="{$robots}" n:ifset="$robots">

        <title>FKSDB {include #title}</title>


        {control cssLoader
            'css/screen.css' => [screen] ,
            'http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.2/themes/smoothness/jquery-ui.css' => [screen,projection,tv]
        }
        
        {block head}{/block}
    </head>

    <body>
        <div class="navigation">
            <a n:href=":Org:Dashboard:">Pultík</a>
        </div>
        <h1>{include #title}</h1>
        <div n:foreach="$flashes as $flash" class="flash {$flash->type}">{$flash->message}</div>
        <div n:if="$user->isLoggedIn()" class="user-info">
            <p>Přihlášen <em>{$user->getIdentity()->getPerson()->getFullname()}</em>
                <a n:href=":Authentication:logout">Odhlásit</a>
            </p>
            <p>
                <a n:href=":Public:Personal:edit">Osobní nastavení</a>
            </p>
            <p n:if="$user->getIdentity()->getPerson()->getActiveOrgs($control->getYearCalculator())">Rola orga:
                {foreach $control->getAvailableContests() as $contest}
                <a n:href="changeContest!, contestId => $contest->contest_id" n:tag-if="$contest->contest_id != $control->contestId"><b n:tag-if="$contest->contest_id == $control->contestId">{$contest->name}</b></a>
                {/foreach}

                {control formSelectYear}
            </p>
        </div>
        {include #content}

        <div id="spinner"></div>
        {block scripts}
        {control jsLoader 
            'js/netteForms.js',
            'https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js',
            'https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.2/jquery-ui.min.js',
            'js/main.js'
        }

        {* CSS files are only collected at the end of rendering, so we use this
          invalid workaround and link some CSS files at the end of the page
        *}
        {control jsLoader:inline}
        {/block}
        {control cssLoader}
    </body>
</html>
