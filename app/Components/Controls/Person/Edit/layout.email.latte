{varType bool $changeActive}
{varType FKSDB\Modules\Core\Language $lang}
{block content}
    {if $changeActive}
        <p class="alert alert-info">{_'Please check your email and confirm your new address.'}</p>
    {else}
        <p class="alert alert-info">
            {switch $lang->value}
                {cache 'cs'}{/cache}
                {cache 'en'}{/cache}
            {/switch}
        </p>
        {control formControl}
    {/if}

{/block}
