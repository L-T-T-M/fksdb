parameters:
    events:
        vikend3:
            appCond: or(regOpen(), role('admin'))
            cancelable: neg(or(state('missed'),state('participated'),state('cancelled')))
            person:

                person:
                    other_name: true
                    family_name: true
                person_history:
                    school_id: true
                person_info:
                    email: true
                    id_number: true
                    born: true
                    born_id:
                        required: %events.soustredeni.requiredCond%
                        description: _('Kvůli pojišťovně.')
                    phone:
                        required: %events.soustredeni.requiredCond%
                        description: _('Telefon (i s předvolbou státu), jenž budeš mít s sebou.')
            tshirt:
                M_S: S _('pánské')
                M_M: M _('pánské')
                M_L: L _('pánské')
                M_XL: XL _('pánské')
                M_XXL: XXL _('pánské')
                F_S: S _('dámské')
                F_M: M _('dámské')
                F_L: L _('dámské')
                F_XL: XL _('dámské')
events:
    vikend3:
        event_type_id: 3
        eventYears: [3]
        tableLayout: event.grid
        formLayout: vikend.form
        paramScheme:
            notifyBcc:
                default: vaf@fykos.cz
            notifyFrom:
                default: Víkend s aplikovanou fyzikou <vaf@fykos.cz>
            capacity:
                default: 0

        baseMachines:
            PARTICIPANT:
                service: @event.ServiceMVikendParticipant

                states:
                    applied: _('Přihlášen')
                    spare: _('Náhradník')
                    participated: _('Účastnil se')
                    missed: _('Nepřijel')
                    cancelled: _('Zrušen')

                transitions:
                    __init->spare:
                        condition: or(and(regOpen(),le(count('applied'),param('capacity'))), role('admin'))
                        label: _('Přihlásit náhradníka')
                        onExecuted:
                            - Events\Transitions\MailSender(confirmation, .self)
                    spare->applied:
                        condition: role('admin')
                        label: _('Nasadit náhradníka')
                    applied->participated:
                        condition: and(role('admin'),eventWas())
                        label: _('Prezentovat')
                    applied->missed:
                        condition: and(role('admin'),eventWas())
                        label: _('Nepřijel')
                        dangerous: true
                    spare|applied->cancelled:
                        condition: and(role('admin'),neg(or(state('missed'),state('participated'),state('cancelled'))))
                        label: _('Zrušit přihlášku')
                        dangerous: true
                    cancelled->__terminated:
                        condition: role('admin')
                        label: _('Smazat přihlášku')

                fields:
                    person_id:
                        label: _('Osoba')
                        required: true
                        modifiable: %events.vikend3.appCond%
                        default: fromLogin
                        factory: RefPerson(%events.vikend3.person%, email, or(state('__init'),role('admin')), role('admin'), false)
                    tshirt_size:
                        label: _('Jaké triko nosíš?')
                        required: %events.soustredeni.requiredCond%
                        factory: Chooser(_('Zvolit velikost'), Options(%events.soustredeni.tshirt%))
                    diet:
                        label: _('Jídlo')
                        description: _('Máš nějaké speciální stravovací návyky – vegetariánství, veganství, diety, …? Pokud ano, máš zájem o speciální stravu nebo si (zejména v případě veganů) dovezeš jídlo vlastní?')
                    health_restrictions:
                        label: _('Zdravotní omezení')
                        description: _('Máš nějaká zdravotní omezení, která by tě mohla omezovat v pobytu na soustředění nebo kvůli kterým by ses např. nemohl/a účastnit fyzicky náročných nebo nočních her? Například různé alergie (a jejich projevy), cukrovka, epilepsie, dlouhodobější obtíže, … Bereš nějaké léky, ať už pravidelně, nebo v případě obtíží? Jaké to jsou? Jsou nějaké další informace ohledně tvého zdravotního stavu, co bychom měli vědět?')


        #
        #   MACHINE
        #   explanation: machine consists of several instances of base machines
        #
        machine:
            baseMachines:
                participant:
                    bmName: PARTICIPANT
                    label: Účastník
                    required: true
                    primary: true
            formAdjustments:
                - Events\FormAdjustments\UniqueCheck('participant.person_id', _('Zvolená osoba je již přihlášená.'))
                - @events.privacyPolicy
                - @events.captcha

            processings:
                - @events.privacyPolicy
